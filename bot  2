import discord
import random
import os
from discord.ext import commands
intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='/', intents=intents)

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.command()
async def hello(ctx):
    await ctx.send(f'–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç {bot.user}!')
@bot.command()
async def buy(ctx):
    await ctx.send('–ü–æ–∫–∞, –º–æ–π –≥–æ—Å–ø–æ–¥–∏–Ω')


@bot.command()
async def heh(ctx, count_heh: int):
    await ctx.send("he" * count_heh)

@bot.command()
async def equation(ctx, first: int, action: str, second: int):
      if action == "+":
            await ctx.send(first + second)
      elif action == "-":
            await ctx.send(first - second)
      elif action == "*":
            await ctx.send(first * second)
      elif action == "/":
            await ctx.send(first / second)
spis = []
@bot.command()
async def choose(ctx, fc: str, sc: str):
     spis.append(fc)
     spis.append(sc)
     random.choice(spis)
     if random.choice(spis) == fc:
          await ctx.send(fc)
     else:
           await ctx.send(sc)    
     spis.remove(fc)
     spis.remove(sc)

@bot.command()
async def repeat(ctx, content: str, times: int):
    """Repeats a message multiple times."""
    for i in range(times):
        await ctx.send(content)
@bot.command()
async def emojes(ctx):
      listik = ['üòéüëç','ü§§üçï','üé∂üòä','üòç','üòéüçø','üòâüëå','ü§îüí¨','üò°üëä','üî´ü§†','üé§üòÉ','‚òùÔ∏èü§ì','üéÅüòä','üòéüö¨','üòÉüí°','üò£üí¢','ü§ëüí∞','üî•üôÇüî•'] 
      smile = random.choice(listik) 
      await ctx.send(smile)
@bot.command()
async def create_new_nikname(ctx, long: int):
      elementers = "abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
      nicname = ""
      for i in range(long):
            nicname += random.choice(elementers)
      await ctx.send(nicname)
@bot.command()
async def function(ctx):
     await ctx.send('hello-buy= –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ –∏ –ø—Ä–æ—â–∞–Ω–∏–µ,'
                    ' heh - –ø—Ä–æ—Å—Ç–æ –ø—Ä–∏–∫–æ–ª—å–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞, –Ω–∞–ø–∏—à–∏ heh –∞ –∑–∞—Ç–µ–º –Ω–∞–ø–∏—à–∏ —á–∏—Å–ª–æ, —Å–∫–æ–ª—å–∫–æ —Ä–∞–∑ –æ–Ω–æ –ø–æ–≤—Ç–æ—Ä–∏—Ç—å—Å—è,'
                    ' equation- –∫–∞–Ω–∫—É–ª—è—Ç–æ—Ä(–Ω–∞ –¥–≤–∞ —á–∏—Å–ª–∞), –∏—Å–ø–æ—å–∑—É—Ç—å—Å—è + - * /(–¥–µ–ª–µ–Ω–∏–µ),'
                    ' choose - —Ä–∞–Ω–¥–æ–º–Ω—ã–π –≤—ã–±–æ—Ä –º–µ–∂–¥—É —á–µ–º —Ç–æ,'
                    ' repeat - –ø–æ–≤—Ç–æ—Ä—è–µ—Ç –ª—é–±–æ–µ —Å–ª–æ–≤–æ(–Ω–∞–ø–∏—à–∏ —Å–ª–æ–≤–æ, –ø—Ä–æ–±–µ–ª –∏ —Ü–∏—Ñ—Ä—É),'
                    ' emojes - –≤—ã–∑—ã–≤–∞–µ—Ç –ª—é–±—É—é —ç–º–æ—Ü–∏—é,'
                    ' create_new_nikname- —Å–æ–∑–¥–∞–µ—Ç –ª—é–±–æ–π –Ω–∏–∫–Ω–µ–π–º —Å –ª—é–±–æ–π –¥–ª–∏–Ω–æ–π —Ä–∞–Ω–¥–æ–º–Ω–æ'
                    ' mem - –≤—ã—Å—ã–ª–∞–µ—Ç —Ä–∞–Ω–¥–æ–º–Ω—ã–π –º–µ–º,'
                    ' ran_card - –∏–≥—Ä–∞ —Å –∫–∞—Ä—Ç–æ—á–∫–∞–º–∏, –∫–æ–º—É –±–æ–ª—å—à–µ –ø–æ–≤–µ–∑–µ—Ç —Ç–æ—Ç –∏ –≤—ã–π–≥—Ä–∞–ª(–∏–≥—Ä–∞ –±—É–¥–µ—Ç —Ä–∞–∑—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å—Å—è –≤—Å–µ –±–æ–ª—å—à–µ –∏ –±–æ–ª—å—à–µ)')


@bot.command()
async def mem(ctx):
    im = os.listdir('images')
    img_name = random.choice(im)
    with open(f'images/{img_name}', 'rb') as f:
        # –í –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –∫–ª–∞–¥–µ–º —Ñ–∞–π–ª, –∫–æ—Ç–æ—Ä—ã–π –ø—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç—Å—è –≤ —Ñ–∞–π–ª –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ Discord!
        picture = discord.File(f)
   # –ú–æ–∂–µ–º –ø–µ—Ä–µ–¥–∞–≤–∞—Ç—å —Ñ–∞–π–ª –∫–∞–∫ –ø–∞—Ä–∞–º–µ—Ç—Ä!
    await ctx.send(file=picture)


@bot.command()
async def ran_card(ctx):
    ran = random.choice(os.listdir('ranimage'))
    
    with open(f'ranimage/{ran}', 'rb') as f:
        pictures = discord.File(f)
        if 'rin' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - –æ–±—ã—á–Ω–∞—è')
        if 'isagi' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - —Ä–µ–¥–∫–∞—è')
        if 'Akashi' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - —Å–≤–µ—Ä—Ö—Ä–µ–¥–∫–∞—è')
        if 'mahor' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - —ç–ø–∏—á–µ—Å–∫–∞—è')
        if 'sukuna' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - –º–∏—Ñ–∏—á–µ—Å–∫–∞—è ')
        if 'gojo' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–∞—è')
        if 'goku' in ran:
            await ctx.send('–†–µ–¥–∫–æ—Å—Ç—å - —Å—É–ø–µ—Ä-–ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–∞—è')
        await ctx.send(file=pictures)


@bot.command()
async def quest(ctx):
     q1 = ['–ü–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫ - –≤—ã–±—Ä–æ—Å–∏—Ç—å –º—É—Å–æ—Ä, –í—Ç–æ—Ä–Ω–∏–∫ - –ø–æ—á–∏—Å—Ç–∏—Ç—å —É–ª–∏—Ü—É, –°—Ä–µ–¥–∞ - —É–±—Ä–∞—Ç—å –¥–æ–º, –ß–µ—Ç–≤–µ—Ä–≥ - –Ω–∞–¥–æ–µ–¥–∞—Ç—å –¥—Ä—É–∑—å—è–º –ø—Ä–æ –ø—Ä–∏—Ä–æ–¥—É, –ü—è—Ç–Ω–∏—Ü–∞ - —Ä—É–≥–∞–π –ª—é–¥–µ–π –∑–∞ –º—É—Å–æ—Ä',
           '–ü–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫ - –ü—Ä–æ–≤–µ–¥–∏ –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–µ –æ –≤—Ä–µ–¥–µ –ø–ª–∞—Å—Ç–∏–∫–∞ –¥–ª—è –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã, –í—Ç–æ—Ä–Ω–∏–∫ - –û—Ä–≥–∞–Ω–∏–∑—É–π —ç–∫–æ–ª–æ–≥–∏—á–µ—Å–∫—É—é –∞–∫—Ü–∏—é –≤ —Å–≤–æ–µ–º —Ä–∞–π–æ–Ω–µ, –°—Ä–µ–¥–∞ - –ü—Ä–æ–≤–µ–¥–∏ –¥–µ–Ω—å –±–µ–∑ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –ø–ª–∞—Å—Ç–∏–∫–æ–≤—ã—Ö –ø—Ä–æ–¥—É–∫—Ç–æ–≤, –ß–µ—Ç–≤–µ—Ä–≥ - –ò–∑—É—á–∏ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∫–∏ –æ—Ç—Ö–æ–¥–æ–≤ –≤ —Ç–≤–æ–µ–º —Ä–∞–π–æ–Ω–µ –ü—è—Ç–Ω–∏—Ü–∞ -  –°–æ–∑–¥–∞–π –ø–ª–∞–Ω —ç–∫–æ–ª–æ–≥–∏—á–µ—Å–∫–∏—Ö –¥–µ–π—Å—Ç–≤–∏–π –Ω–∞ —Å–ª–µ–¥—É—é—â—É—é –Ω–µ–¥–µ–ª—é',
           '–ü–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫ - –ü—Ä–æ–≤–µ–¥–∏ –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–µ –æ –≤–ª–∏—è–Ω–∏–∏ –∞–≤—Ç–æ–º–æ–±–∏–ª—å–Ω—ã—Ö –≤—ã–±—Ä–æ—Å–æ–≤ –≤ –≤–æ–∑–¥—É—Ö, –í—Ç–æ—Ä–Ω–∏–∫ - –û—Ä–≥–∞–Ω–∏–∑—É–π –∫–∞–º–ø–∞–Ω–∏—é –ø–æ —Å–±–æ—Ä—É —Å—Ç–∞—Ä—ã—Ö –±–∞—Ç–∞—Ä–µ–µ–∫ –≤ —à–∫–æ–ª–µ, –°—Ä–µ–¥–∞ -  –ü—Ä–æ–≤–µ–¥–∏ —ç–∫—Å–∫—É—Ä—Å–∏—é –≤ –º–µ—Å—Ç–Ω—ã–π –ø–∞—Ä–∫ –∏–ª–∏ –∑–∞–ø–æ–≤–µ–¥–Ω–∏–∫, –ß–µ—Ç–≤–µ—Ä–≥ - –û—Ä–∞–≥–Ω–∏–∑—É–π –∫–æ–Ω–∫—É—Ä—Å, –∫—Ç–æ –±–æ–ª—å—à–µ —Å–æ–±–µ—Ä–µ—Ç –º—É—Å–æ—Ä–∞. –ü—è—Ç–Ω–∏—Ü–∞ - –°–æ–∑–¥–∞–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–π –±—É–∫–ª–µ—Ç –æ –º–µ—Ç–æ–¥–∞—Ö —Å–Ω–∏–∂–µ–Ω–∏—è –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏—è']
     pp = random.choice(q1)
     await ctx.send(pp)

@bot.event #–º–æ–¥–µ—Ä–∞—Ü–∏—è –∫–∞–Ω–∞–ª–∞
async def on_message(message):
    if message.author == bot.user:  # –ß—Ç–æ–±—ã –±–æ—Ç –Ω–µ —Ä–µ–∞–≥–∏—Ä–æ–≤–∞–ª –Ω–∞ —Å–≤–æ–∏ –∂–µ —Å–æ–æ–±—â–µ–Ω–∏—è
        return
    deel = ['–∞—Ö —Ç—ã–∂ –ø–∏—Å—å–∫–∞ –≤–æ–ª–æ—Å–∞—Ç–∞—è, —á–µ –º–∞—Ç–µ—Ä–∏—à—å—Å—è?','—Å—ç—Ä, –ø—Ä–æ—à—É –≤–∞—Å –≤ —Å–ª–µ–¥—É—â–∏–π —Ä–∞–∑ –Ω–µ –º–∞—Ç—é–∫–∞–Ω—å—Ç–µ—Å—å',
            '—Ç—ã –æ—Ñ–∏–≥–µ–ª –≤–æ–æ–±—â–µ, —è –ø–∞–ø–µ –ø–æ–∂–∞–ª–∞—é—Å—å','–Ω–µ —Å—Ç–æ–∏—Ç —ç—Ç–æ–≥–æ –¥–µ–ª–∞—Ç—å...','–∞–≥–∞, –Ω—É –¥–∞–≤–∞–π, –ø–æ–ø—Ä–æ–±—É–π –µ—â–µ —Ä–∞–∑']
    pq = random.choice(deel)
    forbidden_words = ['–ë–ª—è—Ç—å', '–±–ª—è—Ç—å', '–±–ª—è',"–ë–ª—è","–ü–∏–∑–¥–µ—Ü", "–ø–∏–∑–¥–µ—Ü", "–ù–∞—Ö—É–π", "–Ω–∞—Ö—É–π", "–ø–∑–¥—Ü", "–ü–∑–¥—Ü","–Ω–∞—Ö","–ù–∞—Ö",
                       "–°—É–∫–∞", "—Å—É–∫–∞", "–±–ª—è–¥—å", "–ë–ª—è—Ç—å",'–µ–±–∞–Ω—ã–π –≤ —Ä–æ—Ç','–ï–±–∞–Ω—ã–π –≤ —Ä–æ—Ç','–ò–¥–∏ –Ω–∞—Ö—É–π','–∏–¥–∏ –Ω–∞—Ö—É–π','–ø–∏–¥–æ—Ä','–ü–∏–¥–æ—Ä','–ø–∏–¥–æ—Ä–∞—Å',
                       '–°—ã–Ω —à–ª—é—Ö–∏','—Å—ã–Ω —à–ª—é—Ö–∏','—à–ª—é—Ö–∞','–®–ª—é—Ö–∞','–ü–∏–∑–¥–∞','–ø–∏–∑–¥–∞', '–µ–±–∞–ª', '–º—Ä–∞–∑—å','–º—Ä–∞–∑–∏']
    
    for word in forbidden_words:
        if word in message.content.lower():
            await message.delete()  # –£–¥–∞–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ, –µ—Å–ª–∏ –æ–Ω–æ —Å–æ–¥–µ—Ä–∂–∏—Ç –∑–∞–ø—Ä–µ—â–µ–Ω–Ω–æ–µ —Å–ª–æ–≤–æ
            await message.channel.send(f'{message.author.mention}, {pq}')
            break  # –ü—Ä–µ—Ä—ã–≤–∞–µ–º —Ü–∏–∫–ª, –µ—Å–ª–∏ –Ω–∞–π–¥–µ–Ω–æ –∑–∞–ø—Ä–µ—â–µ–Ω–Ω–æ–µ —Å–ª–æ–≤–æ

    await bot.process_commands(message)
     

bot.run('E')
