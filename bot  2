@bot.command()
async def mem(ctx):
    im = os.listdir('images')
    img_name = random.choice(im)
    with open(f'images/{img_name}', 'rb') as f:
        # Ğ’ Ğ¿ĞµÑ€ĞµĞ¼ĞµĞ½Ğ½ÑƒÑ ĞºĞ»Ğ°Ğ´ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ», ĞºĞ¾Ñ‚Ğ¾Ñ€Ñ‹Ğ¹ Ğ¿Ñ€ĞµĞ¾Ğ±Ñ€Ğ°Ğ·ÑƒĞµÑ‚ÑÑ Ğ² Ñ„Ğ°Ğ¹Ğ» Ğ±Ğ¸Ğ±Ğ»Ğ¸Ğ¾Ñ‚ĞµĞºĞ¸ Discord!
        picture = discord.File(f)
   # ĞœĞ¾Ğ¶ĞµĞ¼ Ğ¿ĞµÑ€ĞµĞ´Ğ°Ğ²Ğ°Ñ‚ÑŒ Ñ„Ğ°Ğ¹Ğ» ĞºĞ°Ğº Ğ¿Ğ°Ñ€Ğ°Ğ¼ĞµÑ‚Ñ€!
    await ctx.send(file=picture)



     

